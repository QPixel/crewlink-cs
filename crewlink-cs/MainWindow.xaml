        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crewlink"
        mc:Ignorable="d"
        Title="Crewlink" Height="350" Width="250" MaxHeight="350" MaxWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Test Voice" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="29" Width="82" Click="OnVoiceTestClick" Name="voicebtn"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,31,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="190" Name="TestGameAssembly"/>

    </Grid>
